
<%= render 'shared/header' %>
<%= render 'shared/messages' %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Reinventing CV</h1>
    <p class="lead">Build your cv and backed it up with projects that you built .</p>
  </div>
</div>

<div class="col-md-6 mx-auto">
  <div class="card" id="search-card">
    <div class="card-block my-auto">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-8">  <%= search_field_tag :user_id, params[:user_id], { placeholder: "Search a CV ", class: 'form-control'}%></div>
        <div class="col-md-2"><button class="btn btn-primary btn-block" type="submit">Search</button></div>
      </div>
    </div>
  </div>
</div>



