<div class="row">
  <div class="col-md-12">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
    <% end %>
  </div>
</div>