<%= render :layout => '/shared/dashboard_main.html.erb' do %>

    <div class="row">
      <div class="col-md-10">
        <legend>Create New Experience</legend>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <%= form_for(@experince) do |f| %>

            <%= f.hidden_field :user_id, :value => current_user.id %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :position %>
              <%= f.text_field :position, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :start_date %>
              <%= f.date_field :start_date, class:"form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :end_date %>
              <%= f.date_field :end_date, class:"form-control"  %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class:"form-control", cols:6 %>
            </div>

            <div class="form-group">
              <%= f.label :category%>
              <%= f.collection_select(:category_id, Category.all,
                                      :id, :name, {}, class:"form-control")%>

            </div>

            <div class="form-group">
              <%= f.submit "Create", class:"btn btn-primary btn-block" %>
            </div>
        <%end %>
      </div>
    </div>



<% end %>
